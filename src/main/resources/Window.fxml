<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.MainViewController">
    <top>
        <HBox>

        </HBox>
    </top>
    <left>
        <GridPane>

        </GridPane>
    </left>
    <center>
        <TabPane side="BOTTOM">
            <tabs>
                <Tab closable="false"
                    text="FirstTab">
                    <VBox>
                        <Text fx:id="helloWorld" text="Hello World!"/>

                        <TextField fx:id="name"/>

                        <Button text="Say Hello!" onAction="#sayHello"/>
                    </VBox>
                </Tab>
                <Tab closable="false"
                text="SecondTab">

                </Tab>
                <Tab closable="false"
                     text="ThirdTab">

                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.MainViewController">
    <top>
        <HBox>
            <Button text="New Canvas" onAction="#addTab"/>
        </HBox>
    </top>
    <left>
        <GridPane>

        </GridPane>
    </left>
    <center>
        <TabPane fx:id="tabs" side="BOTTOM" tabClosingPolicy="SELECTED_TAB">
            <tabs>
                <Tab text="Untitled">
                    <VBox>
                        <Text fx:id="helloWorld" text="Hello World!"/>

                        <TextField fx:id="name"/>

                        <Button text="Say Hello!" onAction="#sayHello"/>
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>

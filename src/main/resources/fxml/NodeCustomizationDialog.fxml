<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<DialogPane xmlns="http://javafx.com/javafx/8.0.141"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.CustomizationDialogController">

    <content>
        <HBox>
            <VBox alignment="CENTER">
                <TextField fx:id="layerNameTextField" text="Name of the custom Layer"/>
                <ComboBox fx:id="layerTypeSelectionBox" promptText="-Type of the custom Layer-" onAction="#LayerTypeSelected"/>
            </VBox>
        </HBox>
    </content>

    <ButtonType fx:constant="OK"/>
    <ButtonType fx:constant="CANCEL"/>

</DialogPane>

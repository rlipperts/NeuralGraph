<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.ToolbarController"
      fx:id="toolbar">

    <fx:define>
        <ToggleGroup fx:id="toolSelection"/>
    </fx:define>

    <ToggleButton fx:id="tool0" toggleGroup="$toolSelection">
        <graphic>
            <ImageView fitHeight="100"
                       fitWidth="100">
                <Image url="@/images/0.png"/>
            </ImageView>
        </graphic>
    </ToggleButton>
    <ToggleButton fx:id="tool1" toggleGroup="$toolSelection">
        <graphic>
            <ImageView fitHeight="100"
                       fitWidth="100">
                <Image url="@/images/1.png"/>
            </ImageView>
        </graphic>
    </ToggleButton>
    <ToggleButton fx:id="tool2" toggleGroup="$toolSelection">
        <graphic>
            <ImageView fitHeight="100"
                       fitWidth="100">
                <Image url="@/images/2.png"/>
            </ImageView>
        </graphic>
    </ToggleButton>
    <ToggleButton fx:id="tool3" toggleGroup="$toolSelection">
        <graphic>
            <ImageView fitHeight="100"
                       fitWidth="100">
                <Image url="@/images/3.png"/>
            </ImageView>
        </graphic>
    </ToggleButton>
    <ToggleButton fx:id="tool4" toggleGroup="$toolSelection">
        <graphic>
            <ImageView fitHeight="100"
                       fitWidth="100">
                <Image url="@/images/4.png"/>
            </ImageView>
        </graphic>
    </ToggleButton>
</VBox>
